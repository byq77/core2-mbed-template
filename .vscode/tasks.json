{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CLEAN BUILD (RELEASE)",
            "type": "shell",
            "command": "mbed",
            "args": [
                "compile",
                "--profile",
                "${workspaceFolder}/TARGET_CORE2/custom_profiles/release.json",
                "-c",
                "-N",
                "firmware",
                "--source",
                "./../mbed-os",
                "--source",
                ".",
                "--build",
                "./BUILD/RELEASE"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            }
        },
        {
            "label": "BUILD (RELEASE)",
            "type": "shell",
            "command": "mbed",
            "args": [
                "compile",
                "--profile",
                "${workspaceFolder}/TARGET_CORE2/custom_profiles/release.json",
                "-c",
                "-N",
                "firmware",
                "--source",
                "./../mbed-os",
                "--source",
                ".",
                "--build",
                "./BUILD/RELEASE"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            }
        },
        {
            "label": "CLEAN BUILD (DEBUG)",
            "type": "shell",
            "command": "mbed",
            "args": [
                "compile",
                "--profile",
                "${workspaceFolder}/TARGET_CORE2/custom_profiles/release.json",
                "-c",
                "-N",
                "firmware",
                "--source",
                "./../mbed-os",
                "--source",
                ".",
                "--build",
                "./BUILD/RELEASE"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            }
        },
        {
            "label": "BUILD (DEBUG)",
            "type": "shell",
            "command": "mbed",
            "args": [
                "compile",
                "--profile",
                "${workspaceFolder}/TARGET_CORE2/custom_profiles/debug.json",
                "-c",
                "-N",
                "firmware",
                "--source",
                "./../mbed-os",
                "--source",
                ".",
                "--build",
                "./BUILD/DEBUG"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            }
        },
        {
            "label": "FLASH FIRMWARE (RELEASE)",
            "type": "shell",
            "command": "st-flash write ./BUILD/RELEASE/firmware_application.bin 0x8010000",
            "windows": {
                "command": "ST-LINK_CLI",
                "args": [
                    "-P",
                    ".\\BUILD\\RELEASE\\firmware_application.bin",
                    "0x08010000",
                    "-V",
                    "\"after_programming\"",
                    "-Rst"
                ]
            },
        },
        {
            "label": "FLASH FIRMWARE (DEBUG)",
